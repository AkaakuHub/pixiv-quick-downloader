{
  "name": "pixiv-quick-downloader",
  "version": "1.0.0",
  "description": "Pixiv original image downloader extension with TypeScript",
  "main": "dist/bundle.js",
  "type": "module",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:store": "pnpm build && mkdir -p package && cp -r dist/* package/ && cd package && zip -r ../pixiv-quick-downloader-v$(node -e \"console.log(require('../package.json').version)\").zip . && cd .. && rm -rf package",
    "watch": "webpack --mode development --watch",
    "clean": "rm -rf dist/*",
    "type-check": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write src/**/*.{ts,html,json}",
    "format:check": "prettier --check src/**/*.{ts,html,json}",
    "check": "pnpm type-check && pnpm lint && pnpm format:check",
    "knip": "knip"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/chrome": "^0.1.6",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "knip": "^5.63.1",
    "lefthook": "^1.12.4",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "pixiv",
    "extension",
    "downloader",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}